<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.add_project.AddProjectController"
          prefHeight="375.0" prefWidth="400.0"
          alignment = "CENTER">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
    <VBox spacing="10" alignment="CENTER">
        <Label>Name of project</Label>
        <TextField  fx:id="projectNameField"/>

        <Label>Id of a student</Label>
        <TextField fx:id="idField"/>

        <Label>Description</Label>
        <TextField fx:id="projectDescriptionField"/>

        <HBox spacing="40" alignment="CENTER">
            <Button fx:id="submit">Submit</Button>
            <Button fx:id="back" alignment="CENTER_RIGHT">Back</Button>
        </HBox>

        <Text textAlignment="CENTER" fx:id="check"/>
    </VBox>

</GridPane>
